<style>
.attachment{
  max-width: 300px;
}
</style>
<p id="notice"><%= notice %></p>

<p>
  <strong>題幹:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>題幹附檔:</strong>
  <% if @question.title_attr.url != nil%>
    <% if @image_file_type.any? { |filetype| @question.title_attr.url.include? filetype }%>
      <%= image_tag @question.title_attr.url ,:class => "attachment"%>
    <% else %>
      <audio controls>
        <source src="<%= @question.title_attr.url %>" type="audio/mpeg">
        </source>
      </audio>
    <% end %>
  <% end %>
</p>

