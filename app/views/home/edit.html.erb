<style>
a:visited {
    color: white;
}
</style>
<h2>修改使用者資料</h2>
<p id="notice"><%= notice %></p>
<%= simple_form_for @user ,url: home_path, html: { method: :put } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :email, required: false %>
    <%= f.input :password, autocomplete: "off" %>
    <%= f.input :password_confirmation %>
    <%= render 'role_select', role: @admin_role, role_array: @role_array_admin,label: @label[0], f: f %>
    <%= render 'role_select', role: @platform_role, role_array: @role_array_platform,label: @label[1] , f: f%>
    <%= render 'role_select', role: @team_role, role_array: @role_array_team,label: @label[2] , f: f%>
  </div>

  <a class="btn btn-primary" href="/home/function/team/">團隊管理</a>
  <br>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "送出", :class => "btn btn-primary" %>
  </div>
<% end %>